<% provide(:title, @user.full_name) %>
<h1><%= @user.full_name %></h1>

<div class="row">
  <div class="span8 offset1">
    <%= gravatar_for @user, size: 220, class: "gravatar" %>
    <div class="clear"></div>
    <div class="btn-group">
      <a href="#" class="btn"><i class="icon-envelope"></i></a>
      <a href="#" class="btn"><i class="icon-comment"></i></a>
      <a href="#" class="btn"><i class="icon-thumbs-up"></i></a>
      <a href="#" class="btn"><i class="icon-thumbs-down"></i></a>
    </div>
    <% if current_user.admin? %>
    <div class="admin">
      <%= link_to 'Delete', user_delete_path(:id => @user.id), :method => :delete, data: { confirm: 'You sure?' },
        :title => "Delete #{@user.full_name}", :class => "btn btn-danger" %>
      <!-- <a href="#" class="btn btn-danger"><i class="icon-white icon-remove"></i></a> -->
    </div>
  <% end %>
  </div>
</div>
